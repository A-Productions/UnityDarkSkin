<Window x:Class="UnityDarkSkin.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnityDarkSkin.App"
        mc:Ignorable="d"
        Title="Unity Dark Skin: GUI" Height="300" Width="300">

    <Grid>
        <Grid x:Name="StartScreen" Background="#333" Visibility="Hidden">
            <Button Content="OPEN"  Padding="16 8" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OpenButton_Click"></Button>
        </Grid>

        <Grid x:Name="PatchScreen">
            <StackPanel>
                <Label>Editor directory path</Label>
                <Grid Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="DirectoryTextBox" Margin="0,0,45,0" Grid.ColumnSpan="2" MouseDoubleClick="ChooseDirectoryButton_Click"/>
                    <Button x:Name="ChooseDirectoryButton" Style="{StaticResource LiteButtonStyle}" Content="🖊️"  Padding="8"  HorizontalAlignment="Right" Grid.Column="1" Click="ChooseDirectoryButton_Click"></Button>
                </Grid>
                <Label>Choose your version</Label>
                <Grid Margin="4">
                    <ComboBox x:Name="VersionsCombo" Text="ddd"/>
                </Grid>
                <Label>Current theme</Label>
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="LightTheme" Style="{StaticResource ThemeThumbSelected}" Background="#aaa" Margin="5"></Label>
                    <Label x:Name="DarkTheme" Style="{StaticResource ThemeThumb}" Background="#222" Margin="5"></Label>
                </StackPanel>
            </StackPanel>

            <ProgressBar Height="5" Foreground="#FF0000" VerticalAlignment="Bottom" Maximum="1" Value="1"></ProgressBar>

            <Button Content="DO IT!" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"></Button>
        </Grid>

        <Grid x:Name="ProcessingScreen" Background="#CC222222" Visibility="Hidden">
            <Label Foreground="#fff" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center">Processing...</Label>
        </Grid>

    </Grid>
</Window>
